# =============================================================================
# MapOMOP 환경 변수 설정
# =============================================================================
# 이 파일을 .env로 복사하여 사용하세요:
#   cp env.example .env
#
# 병원 환경에 맞게 값을 수정하세요.
# =============================================================================

# -----------------------------------------------------------------------------
# Elasticsearch 설정
# -----------------------------------------------------------------------------
ES_HOST=elasticsearch
ES_PORT=9200
ES_USERNAME=elastic
ES_PASSWORD=snomed

# -----------------------------------------------------------------------------
# SapBERT 설정
# -----------------------------------------------------------------------------
SAPBERT_PORT=8000
SAPBERT_MAX_LENGTH=25
SAPBERT_BATCH_SIZE=128

# -----------------------------------------------------------------------------
# MapOMOP API 설정
# -----------------------------------------------------------------------------
MAPOMOP_PORT=8080

# 스코어링 모드: local_llm, llm, hybrid, semantic_only
SCORING_MODE=local_llm

# 신뢰도 임계값 (0.0 ~ 1.0)
CONFIDENCE_THRESHOLD=0.5

# -----------------------------------------------------------------------------
# 로컬 LLM 설정
# -----------------------------------------------------------------------------
# 사용할 모델: gemma, hari, qwen
LOCAL_LLM_MODEL=qwen

# 모델 경로 (Docker 컨테이너 내부 경로)
# volumes/llm-weights가 /app/llm-models로 마운트됨
LOCAL_LLM_PATH=/app/llm-models

# -----------------------------------------------------------------------------
# PostgreSQL CDM 설정 (인덱싱용, 선택사항)
# -----------------------------------------------------------------------------
PG_HOST=172.23.100.146
PG_PORT=1341
PG_DBNAME=cdm_public
PG_USER=cdmreader
PG_PASSWORD=scdm2025!@

# -----------------------------------------------------------------------------
# 모니터링 설정 (선택사항)
# -----------------------------------------------------------------------------
KIBANA_PORT=5601

# -----------------------------------------------------------------------------
# 서버 설정
# -----------------------------------------------------------------------------
# 병원 서버 IP (예: 10.123.45.67)
SERVER_IP=0.0.0.0
